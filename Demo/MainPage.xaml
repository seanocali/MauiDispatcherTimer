<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <ScrollView  WidthRequest="600" HorizontalOptions="Center">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label x:Name="headerLabel" Text="Stopped"/>
            <Label x:Name="tickLabel" />
            <HorizontalStackLayout Spacing="10">
                <Button Text="Start" BackgroundColor="Green" Clicked="StartButton_Clicked"/>
                <Button Text="Stop" BackgroundColor="Red" Clicked="StopButton_Clicked"/>
            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
